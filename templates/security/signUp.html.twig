{% extends "base.html.twig" %}

{% block title %}
	{{parent()}}
	Inscription
{% endblock %}

{% block body %}
	<div class="container">
		<div class="card registration-form">
			{{form_start(signUpForm)}}
			{{form_row(signUpForm.name, {'attr':{'placeholder':'Pseudo'}})}}
			{{form_row(signUpForm.email, {'attr':{'placeholder':'Email'}})}}
			{{form_row(signUpForm.password, {'attr':{'placeholder':'Mot de passe'}})}}
			{{form_row(signUpForm.confirm_password, {'attr':{'placeholder':'Confirmation'}})}}
			<button type="submit" class="btn btn-success" id="user_save" name="user[save]">Enregistrer
			</button>
			{{form_end(signUpForm)}}
		</div>
	</div>
{% endblock %}
