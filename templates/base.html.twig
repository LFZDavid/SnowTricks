			<script src="{{asset('https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js')}}" crossorigin="anonymous"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
			<script src="{{asset('/js/scripts.js')}}"></script>
		{% endblock %}
	</head>

	<body>
		<div id="main">
			{% include "/includes/header.html.twig" %}
			<div id="body-block"> {% block body %}{% endblock %}
				</div>
				{% include "/includes/footer.html.twig" %}
			</div>
		</body>

	</html>
