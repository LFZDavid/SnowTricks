{% extends 'trick/base.html.twig' %}

{% set title = "Modification de : "~trick.name %}

{% block trick_content %}
	<div class="card edit-trick-btns edit-trick-btns-main edit-main-img-btns">
		<a href="#">
			<i class="bi bi-pencil-fill"></i>
		</a>
		<a onclick="alert('Etes-vous sÃ»re ?')" href="#">
			<i class="bi bi-trash-fill"></i>
		</a>
	</div>
	{% block main_img %}
		<img src="{{asset(trick.getFirstImgUrl)}}" alt="{{trick.name}}" class="img-fluid">
	{% endblock %}
	<div class="card-title-band">
		<h1 class="card-title trick-title">{{title}}</h1>
	</div>
	{{ form_start(formTrick)}}
	<div class="card-body">
		<div class="see-medias-btn dropduwn">
			<button class="btn btn-secondary" type="button" id="dropdownMedias">
				Voir les medias
			</button>
		</div>
		<div class="trick-medias no_mobile">
			{% block medias %}
				{% include "/trick/_media_form.html.twig" %}
			{% endblock %}
		</div>
	</div>
	{% block form %}
		{% include "/trick/_form.html.twig" %}
	{% endblock %}
	{{ form_end(formTrick)}}
	{% include "trick/_delete_form.html.twig" %}
{% endblock %}
